    "fastify": "^4.27.0",
    "graphql": "^16.8.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "cross-env": "^7.0.3",
    "fastify-tsconfig": "^2.0.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
